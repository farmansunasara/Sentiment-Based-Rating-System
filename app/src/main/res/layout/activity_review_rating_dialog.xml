<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="120dp"
            android:text="Your Product Name"
            android:textSize="18sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/review_rating_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave a review"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <RatingBar
        android:id="@+id/review_rating_dialog_ratingBar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/selected_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/review_rating_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="review_message"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/review_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:minHeight="48dp"
        android:hint="Write your review here..."
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/character_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0 characters remaining" />

    <Button
        android:id="@+id/add_media_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="submit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp" />


</LinearLayout>